<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.slawomirmakurat.ekoagromarket.user.SendMessage">

    <TextView
        android:id="@+id/Adress_emailTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SendMsgUserTextView"
        android:textSize="20dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/Adress_email_User_TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:text="EmailAdress"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/Adress_emailTextView"
        app:layout_constraintTop_toTopOf="@+id/Adress_emailTextView" />

    <TextView
        android:id="@+id/textView_text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:text="@string/SendMsgUserMSGTextView"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="@+id/Adress_emailTextView"
        app:layout_constraintTop_toBottomOf="@+id/Title" />

    <TextView
        android:id="@+id/Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="-1dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="31dp"
        android:text="@string/SendMsgUserTitleTextView"
        android:textSize="20dp"
        app:layout_constraintRight_toRightOf="@+id/Adress_emailTextView"
        app:layout_constraintTop_toBottomOf="@+id/Adress_emailTextView" />

    <EditText
        android:id="@+id/editText_Title_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintLeft_toRightOf="@+id/Title"
        app:layout_constraintTop_toBottomOf="@+id/Adress_emailTextView" />

    <EditText
        android:id="@+id/editText_text_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="@+id/editText_Title_msg"
        app:layout_constraintTop_toBottomOf="@+id/editText_Title_msg" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/SendMsg"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />
</android.support.constraint.ConstraintLayout>
